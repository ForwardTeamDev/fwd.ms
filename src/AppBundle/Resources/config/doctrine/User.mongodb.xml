<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                    http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="AppBundle\Document\User" collection="user" customId="true">
        <field fieldName="id" id="true" strategy="AUTO" />
        <field fieldName="firstName" name="first_name"  type="string" />
        <field fieldName="lastName" name="last_name"  type="string" />
        <field fieldName="gender" name="gender"  type="string" />
        <field fieldName="team" name="team"  type="string" />
        <field fieldName="progress" name="progress"  type="string" />
        <field fieldName="vk_id" name="vk_id"  type="string" />
        <field fieldName="fb_id" name="fb_id"  type="string" />
    </document>

</doctrine-mongo-mapping>